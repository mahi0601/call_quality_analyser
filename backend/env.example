# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/omind_ai?retryWrites=true&w=majority

# AI Services Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
OPENAI_API_KEY=your_openai_token_here
PERPLEXITY_API_KEY=your_perplexity_token_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/mpeg,audio/m4a

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
